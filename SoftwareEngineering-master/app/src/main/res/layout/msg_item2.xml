<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<com.daimajia.swipe.SwipeLayout xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp"
    android:paddingHorizontal="6dp"
    android:layout_marginVertical="4dp">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="60dp"

        android:gravity="center"
        android:tag="Bottom3"
        android:weightSum="1">

        <Button
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF5534"
            android:text="删除"
            android:textSize="20sp"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/surface_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/msg_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="user1"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/msg_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:gravity="end"
                android:text="2019-1-1"
                android:textAlignment="textEnd"
                android:textColor="#000"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/msg_item_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            android:text="MessageContentPreviewShowHere"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bootstrap_gray_light"
            android:layout_marginTop="4dp">

        </View>
    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>
</LinearLayout>